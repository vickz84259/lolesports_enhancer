{
  "manifest_version": 2,
  "name": "LolEsports Enhancer",

  "version": "0.1",
  "version_name": "1.0.0-alpha",

  "description": "Enhances the user experience of using the LolEsports website",

  "content_scripts": [{
    "matches": ["https://watch.lolesports.com/*", "https://*.lolesports.com/*"],
    "js": ["builds/spoilers.js"]
  }],

  "background": {
    "scripts": ["src/js/background_scripts/navigation.js"]
  },

  "permissions": [
    "webNavigation",
    "storage"
  ]
}