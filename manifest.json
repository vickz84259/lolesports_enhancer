{
  "manifest_version": 2,
  "name": "LolEsports Enhancer",

  "version": "0.1",
  "version_name": "1.0.0-alpha",

  "description": "Enhances the user experience of using the LolEsports website",

  "content_scripts": [{
    "matches": ["https://watch.lolesports.com/*", "https://*.lolesports.com/*"],
    "js": [
      "src/js/external/purify.min.js",
      "builds/spoilers.js",
      "builds/vod.js"
    ],
    "css": ["src/css/vod.css"]
  }],

  "background": {
    "scripts": ["src/js/background_scripts/navigation.js"]
  },

  "web_accessible_resources": ["src/img/right_sidebar.svg"],

  "permissions": [
    "webNavigation",
    "storage"
  ],

  "icons": {
    "48": "src/img/logo_48.png",
    "96": "src/img/logo_96.png"
  },

  "browser_action": {
    "default_icon": {
      "16": "src/img/logo_dark_16.png",
      "32": "src/img/logo_dark_32.png"
    },

    "default_title": "LoL Esports Enhancer"
  }
}